<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :name, "名前" %>
            <%= f.label :name, @user.name, class: 'form-control' %>
            
            <%= f.label :profile, "プロフィール" %>
            <%= f.label :profile, @user.profile, class: 'form-control' %>

            <%= f.label :area, "地域" %>
            <%# f.select :area, [["Railsの基礎","rails_base"],["Rubyの基礎","ruby_base"]], :include_blank => true, class: 'form-control' %>
            <%= f.label :area, @user.area, class: 'form-control' %>

            <%= f.label :phone_number, "電話番号" %>
            <%= f.label :phone_number, @user.phone_number, class: 'form-control' %>
            
            <%= f.label :email, "メールアドレス" %>
            <%= f.label :email, @user.email, class: 'form-control' %>
        <% end %>
    </div>
</div>