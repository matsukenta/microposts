<h1>プロフィールの編集</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class: 'form-control' %>
            
            <%= f.label :profile, "プロフィール" %>
            <%= f.text_area :profile, class: 'form-control' %>

            <%= f.label :area, "地域" %>
            <%# f.select :area, [["Railsの基礎","rails_base"],["Rubyの基礎","ruby_base"]], :include_blank => true, class: 'form-control' %>
            <%= f.collection_select :area, JpPrefecture::Prefecture.all, :code, :name, :include_blank => true, class: 'form-control' %>

            <%= f.label :phone_number, "電話番号" %>
            <%= f.telephone_field :phone_number, class: 'form-control' %>
            
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: 'form-control' %>
            
            <%= f.submit "基本情報 更新", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>